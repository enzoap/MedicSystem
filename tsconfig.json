{
    "compilerOptions": {
      "target": "es2017",                       
      "module": "commonjs",                    
      "allowJs": true,                          
      "esModuleInterop": true,                  
      "sourceMap": true,
      "watch": true,
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,      
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  